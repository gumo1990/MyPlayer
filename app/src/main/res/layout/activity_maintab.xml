<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" />

        <View
            android:id="@+id/main_tab_dividerline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d7d7d7" />

        <RadioGroup
            android:id="@+id/rg_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#f9f9f9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/home_radio_icon1"
                android:tag="radio_button0"
                android:text="推荐" />

            <RadioButton
                android:id="@+id/rb_2"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/home_radio_icon2"
                android:tag="radio_button1"
                android:text="中奖" />

            <RadioButton
                android:id="@+id/rb_3"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/home_radio_icon3"
                android:tag="radio_button2"
                android:text="资讯" />

            <RadioButton
                android:id="@+id/rb_4"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/home_radio_icon4"
                android:tag="radio_button3"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>

</TabHost>
